<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>S3 Uploader</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center flex-column">
        <form class="my-5 d-flex w-50" action="/api/v1/image/upload" method="post" enctype="multipart/form-data">
            <input type="file" class="form-control" name="image" id="image" accept="image/*" aria-label="Upload"
                required>
            <button class="btn btn-outline-primary" type="submit">Upload</button>
        </form>
        <div class="w-100">
            <div>
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                    <% } %>


                        <% if (success) { %>
                            <div class="alert alert-success" role="alert">
                                <%= success %>
                                    <% } %>
                            </div>

                            <div>
                                <h2 class="mb-2">Images:</h2>
                                <div class="d-flex gap-2 flex-wrap justify-content-center">

                                    <div>
                                        <% for( let index=0; index < images.length; index++ ) { %>
                                            <img src="<%= images[index] %>" alt="image" class="img-thumbnail"
                                                data-bs-toggle="tooltip" data-bs-placement="top"
                                                data-bs-title="Click To Download" width="200"
                                                onclick="window.open('<%= images[index] %>')">
                                            <% } %>
                                    </div>
                                    <% if (images.length==0) { %>
                                        <div class="alert alert-warning" role="alert">
                                            No images found
                                        </div>
                                        <% } %>


                                </div>
                            </div>
            </div>
        </div>

    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"></script>

<script>
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
    const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
</script>

</html>